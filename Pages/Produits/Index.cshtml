@model E_CommerceApp.Pages.Produits.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produit[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produit[0].Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produit[0].Quantite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produit[0].ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produit[0].Categorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produit) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie.NomCategorie)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProduitID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProduitID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProduitID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
